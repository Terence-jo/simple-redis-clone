{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "clang++ -std=c++11 -glldb -fstandalone-debug ${relativeFileDirname}/*.cpp -o ${workspaceFolder}/${fileBasenameNoExtension}"
        },
        {
            "label": "compile g++",
            "type": "shell",
            "command": "g++ -O2 -ggdb ${relativeFile} -o ${fileBasenameNoExtension}"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm ${fileBasenameNoExtension}"
        }
    ]
}

